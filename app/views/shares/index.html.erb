<div class="container">
  <div class="row">
    <div class="col-xs-12">
<p id="notice"><%= notice %></p>

<h1>Share</h1>

<table>
  <thead>
    <tr>
      <th class="">Image</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody class='img-rounded'>
    <% @shares.each do |share| %>
      <tr>
        <td class = "img-td">
          <strong>投稿写真:</strong>
          <%= image_tag(share.image) %>
        </td>
        <td><%= share.title %></td>
        <td><%= share.content %></td>
    
    <td class = "img-td">
      <p>
        <strong>顔:</strong>
        <%# if share.image != nil %>
          <%#= image_tag (share.user.image) %>
          <%#= hidden_field_tag :"cache[image]",@share.image.cache_name %>
        <%# else %>
          <!--<p>no image</p>-->
        <%# end %>
      </p>
    </td>
        <% if current_user.id == share.user_id %>
          <td><%= link_to 'Show', share, class: 'btn btn-default' %></td>
          <td><%= link_to 'Edit', edit_share_path(share), class: 'btn btn-info' %></td>
          <td><%= link_to 'Destroy', share, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <% else %>
          <td><%= link_to 'Show', share, class: 'btn btn-default' %></td>
        <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Share', new_share_path, class: 'btn btn-info' %>
    </div>
  </div>
</div>
